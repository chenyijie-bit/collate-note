<script> 
	 function deleteCard(bank_card_id){
        swal({
            title: "确定要删除这张银行卡吗？",
            text: "",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "确定删除",
            cancelButtonText: "取消",
            closeOnConfirm: false,
            closeOnCancel: true
        },
        function(isConfirm) {
            if (isConfirm) {
                $.ajax({
                    cache: true,
                    type: "POST",
                    url:"/Business/Finance/bank_card_action",
                    data:{bank_card_id:bank_card_id,method:'delete'},
                    dataType: 'json',
                    async: false,
                    error: function(data) {
                       swal('网络错误，请重试！', "", "warning");
                    },
                    success: function(data) {
                        if (data.error == 0) {
                            $('#bank_card_id_' + bank_card_id).remove();
                            swal(data.msg, "", "success");
                        }else{
                            swal(data.msg, "", "error");
                        }
                    }
                });
            }
        })
    };
</script>