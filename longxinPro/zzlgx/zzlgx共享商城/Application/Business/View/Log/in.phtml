<script>
    if (window.innerWidth>=850){
       $('.signin').css('width',window.screen.width);
       $('.mycell').css('width', window.screen.width);
       $('.signin').css('height',window.screen.height);
       $('.mycell').css('height', window.screen.height);
    }
   
    function loginAction(){
        //准备
        var url = "/business/log/in";
        var username = $('#username').val();
        var password = $('#password').val();
        if (!username) {
            username = $('#username1').val();
        }
        if (!password) {
            password = $('#password1').val();
        }
        //发送
        $.post(url,{"username":username,"password":password},function(d){
            if(d.error){            
                swal(d.msg, "", "warning");
                return false;
            }else{
                window.location.href = '/business';
                return false;
            }
        },'json');
    }
</script>
